        Title="MewsyBox" Width="1280" Height="720" >


    <Border Background="#23262B" CornerRadius="40" MouseDown="Border_MouseDown">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="290"/>
                <ColumnDefinition Width="46*"/>
                <ColumnDefinition Width="53*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <!-- Menu -->
            <Border Background="Gainsboro" CornerRadius="40 0 0 40" Grid.RowSpan="2">
                <StackPanel Margin="0 5 0 0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="63 10 0 10">

                    </StackPanel>
                    <Image Source="Resources/Assets/MainWindow/logo.png" Height="123" Width="277"/>
                    <TextBlock Text="LIBRARY" Style= "{StaticResource menuTitle}"/>

                    <Button Style="{StaticResource menuButton}" Background="#23262B" Click="OpenPlaylists_bn" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="Home"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource menuButton}" Background="#23262B" Click="OpenPlaylists_bn" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="My Playlists"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource menuButton}" Background="#23262B" Click="OpenPlaylists_bn" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="Artists"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource menuButton}" Background="#23262B" Click="OpenPlaylists_bn" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="Albums"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource menuButton}" Background="#23262B" Click="OpenPlaylists_bn" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="My Stats"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>

                    <TextBlock Text=" OTHER" Style= "{StaticResource menuTitle}"/>
                    <Button Style="{StaticResource menuButton}" Background="#23262B" Click="OpenPlaylists_bn" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="STORE"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource menuButton}" Background="#23262B" Click="OpenPlaylists_bn" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="NEWS"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource menuButton}" Background="#23262B" Click="OpenPlaylists_bn" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="ACCOUNT"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>

                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" Background="Transparent" Margin="25,20,25,540">
