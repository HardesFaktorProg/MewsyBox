            <!-- Popular-Songs-Category (PSC) -->
            <Border Grid.Column="2" CornerRadius="40" Margin="30,60,30,20">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#23262B"/>
                        <GradientStop Color="#FF336928" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!-- List of PopSongs -->
                <StackPanel Margin="30 50 30 0">
                    <TextBlock Text="Popular Songs (Top-5)" Style="{StaticResource titleText}" Margin="0 0 0 10" FontSize="28"/>

                    <Border x:Name="popslot_1" Background="#ecf4f0" CornerRadius="30" Padding="10" Margin="0 7" MouseEnter="border_MouseEnter" MouseLeave="border_MouseLeave">
